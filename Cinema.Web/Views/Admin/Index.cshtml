@model IEnumerable<Cinema.Core.Entities.Movie>

@{
    ViewData["Title"] = "Адмінка - Фільми";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">⚙️ Панель Адміністратора</h2>
        <a asp-action="Create" class="btn btn-success fw-bold">+ Додати фільм</a>
    </div>

    <div class="card bg-dark text-white border-secondary">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Постер</th>
                        <th>Назва</th>
                        <th>Тривалість</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.Id</td>
                            <td>
                                <img src="@movie.PosterUrl" alt="Постер" style="width: 50px; height: 70px; object-fit: cover; border-radius: 4px;" />
                            </td>
                            <td class="align-middle fw-bold">@movie.Title</td>
                            <td class="align-middle">@movie.DurationMinutes хв</td>
                            <td class="align-middle">
                                <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-warning">Редагувати</a>
    
                                <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline" onsubmit="return confirm('Ви впевнені, що хочете назавжди видалити фільм «@movie.Title»?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Видалити</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>