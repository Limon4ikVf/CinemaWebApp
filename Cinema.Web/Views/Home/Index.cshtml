@using Cinema.Core.Entities
@model IReadOnlyList<Movie>
@{
    ViewData["Title"] = "Афіша";
}

<div class="text-center">
    <h1 class="display-3 cinema-title">Сьогодні в кіно</h1>
    <p class="lead text-muted">Найкращі прем'єри сезону вже чекають на тебе</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card movie-card h-100 shadow-sm">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" style="text-decoration: none;">
                        <img src="@movie.PosterUrl" class="card-img-top movie-poster" alt="@movie.Title">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title text-white mb-3">@movie.Title</h4>
                        <div class="d-flex justify-content-between mb-3 text-muted small">
                            <span>📅 @movie.ReleaseDate.Year</span>
                            <span class="text-gold">⌛ @movie.DurationMinutes хв</span>
                        </div>
                        <p class="card-text text-secondary flex-grow-1">
                            @(movie.Description.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)
                        </p>
                    </div>

                    <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-cinema">
                        🎟 Купити квиток
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center mt-5">
        <h3 class="text-muted">На жаль, сеансів поки немає.</h3>
    </div>
}