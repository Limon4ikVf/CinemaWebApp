<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark cinema-header box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    🍿 Cinema.Web
                </a>
            
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Фільми</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Про нас</a>
                        </li>
                    </ul>
                
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item ms-2">
                                    <a class="nav-link text-danger fw-bold border border-danger rounded px-2" asp-controller="Admin" asp-action="Index">
                                        🎬 Фільми
                                    </a>
                                </li>
                                <li class="nav-item ms-2">
                                    <a class="nav-link text-primary fw-bold border border-primary rounded px-2" asp-controller="AdminSession" asp-action="Index">
                                        📅 Сеанси
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="Profile" asp-action="Index">
                                    🎫 Мої бронювання
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <span class="text-secondary mx-3">|</span>
                                <span class="text-white me-3">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">Вийти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Вхід</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-warning fw-bold text-dark" asp-controller="Account" asp-action="Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Cinema.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
