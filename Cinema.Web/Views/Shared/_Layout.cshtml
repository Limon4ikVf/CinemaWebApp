<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-main-nav fixed-top shadow-lg">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <span class="fs-3">🍿</span>
                <span class="ms-2 fw-bold tracking-tighter text-uppercase" style="color: #ffc107; letter-spacing: 1px;">
                    Gold<span class="text-white">Ticket</span>
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-content="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-3">
                    <li class="nav-item">
                        <a class="nav-link text-uppercase small fw-bold mt-1" asp-controller="Home" asp-action="Index">Фільми</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-danger btn-nav-custom" asp-controller="Admin" asp-action="Index">
                                🎬 Фільми
                            </a>
                            <a class="btn btn-outline-primary btn-nav-custom" asp-controller="AdminSession" asp-action="Index">
                                📅 Сеанси
                            </a>
                        }

                        <a class="btn btn-link text-warning text-decoration-none fw-bold me-2" asp-controller="Profile" asp-action="Index">
                            🎟 Мої бронювання
                        </a>

                        <div class="vr text-white opacity-25 me-3" style="height: 30px;"></div>

                        <span class="text-white-50 small me-3">@User.Identity.Name</span>

                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3">Вийти</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm px-4 rounded-pill" asp-controller="Account" asp-action="Login">Увійти</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-3 mt-auto border-top border-secondary border-opacity-10" style="background-color: #0f0f0f;">
        <div class="container">
            <div class="text-center">
                <span class="fw-bold text-uppercase small" style="color: #ffc107; letter-spacing: 1px;">
                    Gold<span class="text-white">Ticket</span>
                </span>
                <span class="text-white-50 ms-2 small">&copy; 2026 Всі права захищені</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
